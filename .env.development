#!/usr/bin/env bash

# Host
WORDPRESS_PROTOCOL = http
WORDPRESS_HOST = localhost
WORDPRESS_PORT = 8000
PHPMYADMIN_PORT = 3000

# Database
DB_DATABASE = wordpress
DB_PORT = 3306
DB_USER = wordpress
DB_PASSWORD = wordpress
DB_ROOT_PASSWORD = wordpress
WORDPRESS_TABLE_PREFIX = wp_

# Website Credentials
WORDPRESS_ADMIN_USER = admin
WORDPRESS_ADMIN_PASSWORD = admin
WORDPRESS_ADMIN_EMAIL = admin@wordpress.lan

# Develop
WORDPRESS_DEBUG = true
WORDPRESS_CLI_CACHE_DIR = /tmp

# Install Settings
WORDPRESS_TITLE = "Volunteer project"
WORDPRESS_PERMALINK_STRUCTURE = /%postname%/
WORDPRESS_THEMES_TO_INSTALL = "understrap"
WORDPRESS_THEME_TO_ACTIVATE = "currentTheme"
WORDPRESS_PLUGINS_TO_INSTALL = "query-monitor elementor folders metronet-profile-picture advanced-custom-fields"

# Git Configuration (optional, for private repositories)
GIT_USER_NAME = ""
GIT_USER_EMAIL = ""

# Private Repositories (optional)
# Comma-separated list of Git repository URLs (SSH format recommended)
# Example: git@github.com:username/plugin-name.git,git@github.com:username/another-plugin.git
PRIVATE_PLUGIN_REPOS = ""
PRIVATE_THEME_REPOS = ""

# SSH Key Path (optional, defaults to ~/.ssh)
# Path to directory containing SSH keys for accessing private repositories
# Example: /home/username/.ssh or ${HOME}/.ssh
SSH_KEY_PATH = ""
